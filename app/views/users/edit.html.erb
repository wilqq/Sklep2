<% provide(:title, 'Edycja profilu') %>
<h1>Edytuj profil</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages' %>

			<%= f.label :forename, "Imie"  %>
      		<%= f.text_field :forename %>

      		<%= f.label :surname, "Nazwisko" %>
      		<%= f.text_field :surname %>

          <%= f.label :address, "Adres" %>
          <%= f.text_field :address %>

      		<%= f.label :email %>
      		<%= f.text_field :email %>

      		<%= f.label :password, "Hasło" %>
     		<%= f.password_field :password %>

      		<%= f.label :password_confirmation, "Potwierdź hasło" %>
      		<%= f.password_field :password_confirmation %>
      		<br></br>
      		<p><%= f.submit "Zapisz zmiany", class: "btn btn-large btn-primary" %></p>
       <% end %>
	</div>
</div>