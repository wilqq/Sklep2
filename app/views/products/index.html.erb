<h1>Lista produktów</h1>



<% @products.each do |product| %>
<div class="products" >
     <h3><%= link_to  product.name , product %></h3>
     <%= image_tag(product.image_url) %>
    <div class="price_line" >
        <span class="price" ><%= product.price %>  zł</span>
    </div>
    <%= link_to 'Show', product %>
    <%= link_to 'Edit', edit_product_path(product) if signed_in? && current_user.admin?  %>
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } if signed_in? && current_user.admin?  %>
</div>
  
<% end %>


<br />

<%= link_to 'New Product', new_product_path if signed_in? && current_user.admin? %>
